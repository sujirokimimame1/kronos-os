// Tratamento global de erros
process.on('uncaughtException', (err) => {
  console.error('âŒ Erro nÃ£o tratado:', err);
});

process.on('unhandledRejection', (reason) => {
  console.error('âŒ Promessa rejeitada:', reason);
});

const app = express();
